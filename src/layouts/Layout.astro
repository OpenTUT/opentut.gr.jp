---
import { Footer } from '../components/Footer';
import { Header } from '../components/Header';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="TUT-IIC" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Header client:load />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  @keyframes fall {
    0% {
      transform: translateY(-10vh) rotate(0deg);
    }
    100% {
      transform: translateY(110vh) rotate(360deg);
    }
  }

  .sakura {
    position: absolute;
    animation: fall linear infinite;
    will-change: transform;
    color: rgba(255, 182, 193, 0.3);
  }

  .sakura-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    pointer-events: none;
    z-index: 1;
  }

  .markdown-body {
    font-family: sans-serif;
    color: #000;
    background-color: #fff;
  }

  .markdown-body ul {
    list-style-type: disc;
    list-style-position: inside;
    padding-left: 1rem;
    margin-bottom: 1rem;
  }

  .markdown-body h1,
  .markdown-body h2,
  .markdown-body h3 {
    font-weight: bold;
    margin-bottom: 1rem;
    color: #000;
  }

  .markdown-body h1,
  .markdown-body h2 {
    border-bottom: 2px solid #ccc;
  }

  .markdown-body h1 {
    font-size: 2rem;
    padding-bottom: 0.5rem;
  }

  .markdown-body h2 {
    font-size: 1.5rem;
  }

  .markdown-body h3 {
    font-size: 1.25rem;
  }

  .markdown-body p {
    margin-bottom: 1rem;
  }
</style>
