---
import Image from 'astro/components/Image.astro';
import TUTIICIcon from '../assets/tut_iic_logo.svg';
---

<header class="bg-tut-red text-white p-4 flex justify-between items-center">
  <a href="/" class="font-medium hover:text-gray-300">
    <div class="flex items-center">
      <Image src={TUTIICIcon} class="logo w-16 h-16 mr-2" alt="logo" />
      <h1 class="text-3xl font-bold ml-2">
        TUT - Information Infrastructure Club
      </h1>
    </div>
  </a>
  <nav>
    <ul class="flex justify-around">
      <li>
        <a href="/" class="font-medium hover:text-gray-300"> トップページ </a>
      </li>
      <li>
        <a href="/activities" class="font-medium hover:text-gray-300 ml-5">
          活動内容・スケジュール
        </a>
      </li>
      <li>
        <a href="/members" class="font-medium hover:text-gray-300 ml-5">
          部員の活動
        </a>
      </li>
      <li>
        <a href="/privacy" class="font-medium hover:text-gray-300 ml-5">
          プライバシーポリシー
        </a>
      </li>
      <li>
        <a
          href="https://twitter.com/TUT_IIC"
          target="_blank"
          rel="noopener noreferrer"
          class="font-medium hover:text-gray-300 ml-5 mr-2"
        >
          𝕏(旧Twitter)
        </a>
      </li>
    </ul>
  </nav>
</header>
