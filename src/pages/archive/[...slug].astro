---
import { type CollectionEntry, getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';
import { SITE_TITLE } from '../../consts';
import Card from '../../components/Card.astro';
import { IconCalendarEvent, IconUser } from '@tabler/icons-react';

export async function getStaticPaths() {
  const posts = await getCollection('archive');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<'archive'>;

const post = Astro.props;
const { Content } = await post.render();
const { title, date, author, marp, description, image } = post.data;
---

<Base
  title={`${title} | ${SITE_TITLE}`}
  description={description}
  image={image?.src.src}
>
  <Card>
    <h1 class="mb-8 mt-2 text-3xl font-bold">
      {title}
    </h1>
    <div class="mb-2 flex gap-1 font-medium text-gray-500">
      <IconCalendarEvent />
      <time datetime={date.toISOString()}>
        {
          date.toLocaleDateString('ja', {
            year: 'numeric',
            month: 'numeric',
            day: 'numeric',
            weekday: 'short',
          })
        }
      </time>
    </div>
    <div class="mb-8 flex gap-1 font-medium text-gray-500">
      <IconUser />
      {author}
    </div>
    <hr />
    <article
      class:list={['prose', 'max-w-none', 'py-8', { 'prose-hr:hidden': marp }]}
    >
      <Content />
    </article>
  </Card>
</Base>
