---
import { type CollectionEntry, getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';
import { SITE_TITLE } from '../../consts';
import Card from '../../components/Card.astro';

export async function getStaticPaths() {
  const posts = await getCollection('archive');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<'archive'>;

const post = Astro.props;
const { Content } = await post.render();
const { title, pubDate, author, marp, description } = post.data;
---

<Base title={`${title} | ${SITE_TITLE}`} description={description}>
  <section class="rounded-2xl bg-white p-4 shadow-md">
    <div class="prose mb-4 max-w-none">
      <h1 class="mb-4 text-3xl font-bold">
        {title}
      </h1>
      <h2 class="mb-4 text-right text-2xl font-semibold text-red-700">
        by {author}
      </h2>
      <article
        class:list={['prose', 'max-w-none', { 'prose-hr:hidden': marp }]}
      >
        <Content />
      </article>
      <p class="mt-8 text-right text-xl text-gray-500">
        Written on: {
          pubDate
            .toLocaleDateString('ja', {
              year: 'numeric',
              month: '2-digit',
              day: '2-digit',
            })
            .replaceAll('/', '-')
        }
      </p>
    </div>
  </section>
</Base>
